<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/gambar_profil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="20dp"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:maxWidth="60dp"
        android:maxHeight="60dp"
        />

    <TextView
        android:id="@+id/nama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Hallo, Arif"
        android:textSize="20sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/gambar_profil"
        app:layout_constraintEnd_toStartOf="@+id/ic_notification"
        app:layout_constraintTop_toTopOf="@+id/gambar_profil"
        app:layout_constraintBottom_toBottomOf="@+id/gambar_profil" />

    <ImageView
        android:id="@+id/ic_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gambar_profil"
        app:layout_constraintBottom_toBottomOf="@+id/gambar_profil"
        android:layout_marginEnd="20dp"
        />

    <!-- ScrollView untuk Dashboard Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/gambar_profil"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="0dp"
                android:layout_height="260dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="53dp"
                                android:layout_height="43dp"
                                android:layout_margin="15dp"
                                android:src="@drawable/book"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/jml_keg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="40dp"
                                android:text="230"
                                android:textSize="20sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="15dp"
                                android:text="Junlah Kegian Yang Di Ikuti"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView"
                                app:layout_constraintVertical_bias="0.305" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/ic2"
                                android:layout_width="53dp"
                                android:layout_height="43dp"
                                android:layout_margin="15dp"
                                android:src="@drawable/people_ico_new"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/rating_kepatuhan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="40dp"
                                android:text="7/8"
                                android:textSize="20sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="15dp"
                                android:text="Kegiatan Aktif"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ic2"
                                app:layout_constraintVertical_bias="0.305" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ic_reting"
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_marginTop="50dp"
                            android:src="@drawable/trophy1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <TextView
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:text="8/10"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ic_reting"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:text="Achievement"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rating" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Guideline untuk bagian bawah -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="20dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="20dp" />

            <!-- Menu Card dengan ScrollView Horizontal -->
            <androidx.cardview.widget.CardView
                android:id="@+id/l2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toStartOf="@id/guideline_end"
                app:layout_constraintTop_toBottomOf="@id/l1">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:paddingVertical="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="8dp">

                        <LinearLayout
                            android:id="@+id/btn_pantau_aktivitas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:backgroundTint="@color/blue"
                                app:cardCornerRadius="10dp">
                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_kegiatan"
                                    android:layout_gravity="center"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/tx1"
                                android:layout_width="60dp"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp"
                                android:layout_height="wrap_content"
                                android:text="Pantau Aktivitas"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_pantau_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:backgroundTint="@color/blue"
                                app:cardCornerRadius="10dp">
                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/pantauanprogres"
                                    android:layout_gravity="center"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/tx2"
                                android:layout_width="60dp"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp"
                                android:layout_height="wrap_content"
                                android:text="Pantau Progres"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_kinerja_harian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:backgroundTint="@color/blue"
                                app:cardCornerRadius="10dp">
                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/kinerjahaarian"
                                    android:layout_gravity="center"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/tx3"
                                android:layout_width="60dp"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp"
                                android:layout_height="wrap_content"
                                android:text="Kinerja Harian"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_achievement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:backgroundTint="@color/blue"
                                app:cardCornerRadius="10dp">
                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/achievement"
                                    android:layout_gravity="center"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/tx4"
                                android:layout_width="60dp"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp"
                                android:layout_height="wrap_content"
                                android:text="Achievement"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_feedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:backgroundTint="@color/blue"
                                app:cardCornerRadius="10dp">
                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/testimonifeedback"
                                    android:layout_gravity="center"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/text"
                                android:layout_width="60dp"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp"
                                android:layout_height="wrap_content"
                                android:text="Testimoni Feedback"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txKegiatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Kegiatan Saya"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/l2" />

            <!-- Tab Layout dengan wrap_content -->
            <LinearLayout
                android:id="@+id/tabLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/txKegiatan"
                app:layout_constraintStart_toStartOf="@id/guideline_start">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tabAktif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#B3D9FF"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tvTabAktif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aktif"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="8dp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tabTidakAktif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tvTabTidakAktif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak Aktif"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="8dp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- RecyclerView dengan tinggi wrap_content -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvKegiatan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_list_kegiatan"
                app:layout_constraintTop_toBottomOf="@+id/tabLayout"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toStartOf="@id/guideline_end" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@color/primary_color"
        app:layout_constraintTop_toBottomOf="@+id/gambar_profil"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/blue"
        app:itemTextColor="@color/blue"/>

</androidx.constraintlayout.widget.ConstraintLayout>