<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/nama_pcl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama PCL"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_detail"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:id="@+id/total_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Target PCL"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/nama_pcl"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/total_target_aktual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Target PCL"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/total_target"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#3BB4F9"
            android:progressBackgroundTint="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@+id/total_target_aktual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/tv_persentase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#3BB4F9"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#3BB4F9"
            />

        <Button
            android:id="@+id/btn_approve"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Approve"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tv_persentase"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:backgroundTint="#4CAF50"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>