<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:layout_margin="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Rating Stars -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/star1Small"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:id="@+id/star2Small"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:id="@+id/star3Small"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:id="@+id/star4Small"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star_null"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:id="@+id/star5Small"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star_null" />

        </LinearLayout>

        <!-- Feedback Text -->
        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback testimoni dari pengguna akan ditampilkan di sini dengan beberapa baris teks yang menjelaskan pengalaman mereka."
            android:textColor="#333333"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>